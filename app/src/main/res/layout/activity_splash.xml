<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".MainActivity"
    android:id="@+id/parent"
    android:background="@color/colorYellow"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:id="@+id/imageView"
        android:layout_height="367dp"
        android:layout_width="221dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/uec"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="10dp"/>

    <TextView android:id="@+id/textView2"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="360dp"
        tools:text="Uec Notes"
        android:text="UEC NOTES"
        app:layout_constraintVertical_bias="0.275"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        android:textSize="70sp"
        android:textColor="@android:color/black"
        android:textAlignment="center" android:fontFamily="@font/bangers"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_height="27dp"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Study materials for everyone"
        app:layout_constraintVertical_bias="0.261"
        android:textSize="18sp" android:textColor="@android:color/black"
        android:textAlignment="center"
        android:fontFamily="@font/antic"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="132dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>